{
	"db_name": "zeroverse",
	"db_file": "merged-CDN/zeroverse.db",
	"version": 2,
	"maps":
	{
    ".+/data/users/.+/data.json":{
			"to_table": [
				{"node": "channel", "table": "channel"},
				{"node": "channel_layout", "table": "channel_layout"},
				{"node": "comment", "table": "comment"},
				{"node": "comment_vote", "table": "comment_vote"},
				{"node": "file", "table": "file"},
				{"node": "file_to_item", "table": "file_to_item"},
  			{"node": "moderator", "table": "moderator"},
				{"node": "moderation", "table": "moderation"},
				{"node": "notification", "table": "notification"},
				{"node": "notification_read", "table": "notification_read"},
				{"node": "topic", "table": "topic"},
				{"node": "topic_vote", "table": "topic_vote"},
				{"node": "user", "table": "user"}
			]
		},
		".+/content.json": {
			"to_keyvalue": [ "cert_user_id" ]
		}
	},
	"tables": {
		"channel": {
			"cols": [
				["channel_id", "TEXT"],
				["user_id","TEXT"],
				["name","TEXT"],
				["description","TEXT"],
				["title", "TEXT"],
				["body", "TEXT"],
				["added", "DATETIME"],
				["edited", "DATETIME"],
        ["channel_address", "TEXT"],
        ["channel_name", "TEXT"],
        ["channel_description", "TEXT"],
        ["logo_file", "TEXT"],
        ["cluster_id", "TEXT"],
        ["date_added", "INTEGER"],
        ["hide", "INTEGER"],
        ["user", "TEXT"],
				["json_id", "INTEGER REFERENCES json (json_id)"]
			],
			"indexes": ["CREATE UNIQUE INDEX channel_key ON channel(channel_id, json_id)"],
			"schema_changed": 1
		},
		"channel_layout": {
			"cols": [
				["channel_layout_id", "TEXT"],
				["channel_id","TEXT"],
				["btn_bg_color","TEXT"],
				["btn_text_color","TEXT"],
				["btn_border_color","TEXT"],
				["bg_color","TEXT"],
				["bg_image","TEXT"],
				["bg_image_attachment","TEXT"],
				["bg_image_position","TEXT"],
				["bg_image_size","TEXT"],
				["bg_image_repeat","TEXT"],
				["fg_color","TEXT"],
				["fg_color_secondary","TEXT"],
				["header_bg_color","TEXT"],
				["header_bg_image","TEXT"],
				["subheader_bg_color","TEXT"],
				["subheader_bg_image","TEXT"],
				["subheader_bg_size","TEXT"],
				["subheader_bg_repeat","TEXT"],
				["subheader_bg_position","TEXT"],
				["subheader_height","TEXT"],
				["subheader_title_color","TEXT"],
				["subheader_title_margin_left","TEXT"],
				["subheader_title_margin_top","TEXT"],
				["subheader_title_text","TEXT"],
				["text_color", "TEXT"],
				["subtext_color", "TEXT"],
				["link_color", "TEXT"],
				["heading_color", "TEXT"],
				["added", "DATETIME"],
				["json_id", "INTEGER REFERENCES json (json_id)"]
			],
			"indexes": ["CREATE UNIQUE INDEX channel_layout_key ON channel_layout(channel_layout_id, json_id)"],
			"schema_changed": 1
		},
		"comment": {
			"cols": [
				["comment_id", "TEXT"],
				["topic_id","TEXT"],
				["user_id","TEXT"],
				["comment_parent_id","TEXT"],
				["body", "TEXT"],
				["topic_uri", "TEXT"],
				["parent_comment_uri", "TEXT"],
				["added", "DATETIME"],
				["json_id", "INTEGER REFERENCES json (json_id)"]
			],
			"indexes": ["CREATE INDEX comment_key ON comment(topic_uri)", "CREATE UNIQUE INDEX comment_uri ON comment(json_id, comment_id)"],
			"schema_changed": 1
		},
		"comment_vote": {
			"cols": [
				["comment_vote_id","TEXT"],
				["comment_id","TEXT"],
				["user_id","TEXT"],
				["comment_uri", "TEXT"],
				["vote", "INTEGER"],
				["added", "DATETIME"],
				["json_id", "INTEGER REFERENCES json (json_id)"]
			],
			"indexes": ["CREATE UNIQUE INDEX comment_vote_key ON comment_vote(comment_uri, json_id)", "CREATE INDEX comment_vote_uri ON comment_vote(comment_uri)"],
			"schema_changed": 1
		},
		"file": {
			"cols": [
				["file_id","TEXT"],
				["file_type","TEXT"],
				["item_id","TEXT"],
				["item_type","TEXT"],
				["file_name","TEXT"],
				["model_name","TEXT"],
				["user_id","TEXT"],
				["added", "DATETIME"],
				["json_id", "INTEGER REFERENCES json (json_id)"]
			],
			"indexes": ["CREATE UNIQUE INDEX file_key ON file(file_id, json_id)"],
			"schema_changed": 1
		},
		"file_to_item": {
			"cols": [
				["file_to_item_id","TEXT"],
				["item_type","TEXT"],
				["item_id","TEXT"],
				["file_id","TEXT"],
				["cluster_id","TEXT"],
				["user_id","TEXT"],
				["added", "DATETIME"],
				["json_id", "INTEGER REFERENCES json (json_id)"]
			],
			"indexes": ["CREATE UNIQUE INDEX file_to_item_key ON file_to_item(file_to_item_id, json_id)"],
			"schema_changed": 1
		},
		"moderator": {
			"cols": [
				["moderator_id","TEXT"],
				["user_id","TEXT"],
				["user_name","TEXT"],
				["channel_id","TEXT"],
				["added", "DATETIME"],
				["json_id", "INTEGER REFERENCES json (json_id)"]
			],
			"indexes": ["CREATE UNIQUE INDEX moderator_key ON moderator(moderator_id, json_id)"],
			"schema_changed": 1
		},
		"moderation": {
			"cols": [
				["moderation_id","TEXT"],
				["moderator_name","TEXT"],
				["moderation_type","TEXT"],
				["channel_id","TEXT"],
				["topic_id","TEXT"],
				["comment_id","TEXT"],
				["item_type","TEXT"],
				["item_id","TEXT"],
				["sticky_id","TEXT"],
				["visible","BOOLEAN"],
				["current","BOOLEAN"],
				["added", "DATETIME"],
				["json_id", "INTEGER REFERENCES json (json_id)"]
			],
			"indexes": ["CREATE UNIQUE INDEX moderation_key ON moderation(moderation_id, json_id)"],
			"schema_changed": 1
		},
		"notification": {
			"cols": [
				["notification_id","TEXT"],
				["user_id","TEXT"],
				["item_type","TEXT"],
				["item_id","TEXT"],
				["t_user_id","TEXT"],
				["t_item_type","TEXT"],
				["t_item_id","TEXT"],
				["topic_id","TEXT"],
				["topic_title","TEXT"],
				["added", "DATETIME"],
				["json_id", "INTEGER REFERENCES json (json_id)"]
			],
			"indexes": ["CREATE UNIQUE INDEX notification_key ON notification(notification_id, json_id)"],
			"schema_changed": 1
		},
		"notification_read": {
			"cols": [
				["notification_read_id","TEXT"],
				["notification_id","TEXT"],
				["added", "DATETIME"],
				["json_id", "INTEGER REFERENCES json (json_id)"]
			],
			"indexes": ["CREATE UNIQUE INDEX notification_read_key ON notification_read(notification_read_id, json_id)"],
			"schema_changed": 1
		},
		"topic": {
			"cols": [
				["topic_id", "TEXT"],
				["channel_id","TEXT"],
				["user_id","TEXT"],
				["title", "TEXT"],
				["body", "TEXT"],
				["body_p", "TEXT"],
				["embed_url", "TEXT"],
				["type", "TEXT"],
				["parent_topic_uri", "TEXT"],
				["added", "DATETIME"],
				["json_id", "INTEGER REFERENCES json (json_id)"]
			],
			"indexes": ["CREATE UNIQUE INDEX topic_key ON topic(topic_id, json_id)"],
			"schema_changed": 1
		},
		"topic_vote": {
			"cols": [
				["topic_vote_id","TEXT"],
				["topic_id","TEXT"],
				["user_id","TEXT"],
				["topic_uri", "TEXT"],
				["vote", "INTEGER"],
				["added", "DATETIME"],
				["json_id", "INTEGER REFERENCES json (json_id)"]
			],
			"indexes": ["CREATE UNIQUE INDEX topic_vote_key ON topic_vote(topic_uri, json_id)", "CREATE INDEX topic_vote_uri ON topic_vote(topic_uri)"],
			"schema_changed": 1
		},
		"user": {
			"cols": [
				["user_id","TEXT"],
				["user_name","TEXT"],
				["added", "DATETIME"],
				["screen_name", "TEXT"],
				["about", "TEXT"],
				["json_id", "INTEGER REFERENCES json (json_id)"]
			],
			"indexes": ["CREATE UNIQUE INDEX user_key ON user(user_id, json_id)"],
			"schema_changed": 1
		}
	},
	"feeds": {
		"Topics": "SELECT title AS title, body AS body, added AS date_added, 'topic' AS type, '?Topic:' || topic.topic_id || '_' || topic_creator_json.directory AS url FROM topic LEFT JOIN json AS topic_creator_json ON (topic_creator_json.json_id = topic.json_id)",
		"Comments": "SELECT 'comment' AS type, comment.added AS date_added, topic.title AS title, commenter_user.value || ': ' || comment.body AS body, topic_creator_json.directory AS topic_creator_address, topic.topic_id || '_' || topic_creator_json.directory AS row_topic_uri, '?Topic:' || topic.topic_id || '_' || topic_creator_json.directory AS url FROM topic LEFT JOIN json AS topic_creator_json ON (topic_creator_json.json_id = topic.json_id) LEFT JOIN comment ON (comment.topic_uri = row_topic_uri) LEFT JOIN json AS commenter_json ON (commenter_json.json_id = comment.json_id) LEFT JOIN json AS commenter_content ON (commenter_content.directory = commenter_json.directory AND commenter_content.file_name = 'content.json') LEFT JOIN keyvalue AS commenter_user ON (commenter_user.json_id = commenter_content.json_id AND commenter_user.key = 'cert_user_id')"
	}
}
